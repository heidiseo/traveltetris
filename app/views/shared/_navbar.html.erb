<% color = params[:controller] == 'plans' && (params[:action] == 'new' || params[:action] == 'create') ? 'transparent' : '#6DDBCA'%>
<% position = params[:controller] == 'plans' && (params[:action] == 'new' || params[:action] == 'create') ? 'absolute' : 'initial' %>
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="background-color: <%= color %>; position: <%= position %>;">

  <div class="d-flex align-items-start main-brand">
    <div class="navbar-brand">
      <div class="d-flex justify-content-start left-part">
        <%= link_to root_path, class:"logo" do %>
          <i class="fas fa-globe-americas text-white"></i>
        <% end %>
         <p class= "logo text-white"> TravelTetris</p>
      </div>
    </div>
  </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link text-white" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link text-white" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "passport.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right dropdown-list" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
