<div class="container">
  <h1 class="text-center my-3">Trip Details</h1>
  <div class="flights">
    <div class="flights-2">


      <% @booking.flights.each_slice(2) do |a, b|  %>

        <div class="boarding-card">
          <div class="details">
              <div class="departing flight-details">
                  <h3><%= a.departure_city.name %> - <%= a.arrival_city.name %></h3>
                  <p><%= a.departure_date.strftime("%A, %d %B %Y") %></p>
                  <p><%= DateTime.strptime(a.full_departure_date.to_s,'%s').strftime("%H:%M") %></p>
                  <p>Duration: <%= a.duration %></p>
                  <p>Flight <%= a.flight_number %></p>
              </div>
              <div class="returning flight-details">
                  <h3><%= b.departure_city.name %> - <%= b.arrival_city.name %></h3>
                  <p><%= b.departure_date.strftime("%A, %d %B %Y") %></p>
                  <p><%= DateTime.strptime(b.full_departure_date.to_s,'%s').strftime("%H:%M") %></p>
                  <p>Duration: <%= b.duration %></p>
                  <p>Flight <%= b.flight_number %></p>
              </div>
            </div>
            <div class="total-cost">
                <p class="m-0 p-1">Roundtrip: <%= a.price_cents  %>Â£</p>
            </div>
        </div>
      <% end %>
      <br>
      <h3>Passenger details</h3>
      <br>
      <p>First name: <%= @booking.first_name_passenger %></p>
      <p>Last name: <%= @booking.last_name_passenger %></p>
      <p>Email: <%= @booking.email %></p>
      <p>Passport: <%= @booking.passport %></p>
      <p>Nationality: <%= @booking.nationality %></p>
      <p>Date of Birth: <%= @booking.dob %></p>
    </div>
    <div class="price-next", style="background-color: white;">
      <%= form_tag booking_payments_path(@booking) do %>
        <article>
          <label class="amount">
            <span>Amount: <%= humanized_money_with_symbol(counter) %></span>
          </label>
        </article>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="Plan: <%= @booking.plan.id %>"
          data-email="<%= current_user.email %>"
          data-description="blank"
          data-amount="<%= @booking.amount_cents %>"
          data-currency="<%= @booking.amount.currency %>"></script>
      <% end %>
    </div>
  </div>
</div>

<%#= link_to "Confirm", confirmation_booking_path(@booking) %>