<div class="container">
  <h1>Price Breakdown</h1>
  <div class="d-flex">
    <div>
      <% counter = 0 %>
      <% @flights.each do |flight_pair| %>
        <% counter += flight_pair[0].price_cents %>
        <div class="flight summary-card">
          <div class="">
            <div>
              <p>Departing flight - <%= flight_pair[0].departure_date.strftime("%A, %d %B %Y") %> </p>
              <p><i class="far fa-circle" style="font-size: 1em"></i> <%= DateTime.strptime(flight_pair[0].full_departure_date.to_s,'%s').strftime("%H:%M") %> - <%= flight_pair[0].departure_city.name %></p>
              <div class="d-flex">
                <i class="fas fa-ellipsis-v" style="font-size: 2em"></i>
                <p class="px-3">Travel time: <%= flight_pair[0].duration %></p>
                <%# raise %>
              </div>
              <p><i class="far fa-circle" style="font-size: 1em"></i> <%= DateTime.strptime(flight_pair[0].full_arrival_date.to_s,'%s').strftime("%H:%M") %> - <%= flight_pair[0].arrival_city.name %></p>
            </div>

            <div>
              <p>Returning flight - <%= flight_pair[0].departure_date.strftime("%A, %d %B %Y") %> </p>
              <p><i class="far fa-circle" style="font-size: 1em"></i> <%= DateTime.strptime(flight_pair[0].full_departure_date.to_s,'%s').strftime("%H:%M") %> - <%= flight_pair[0].departure_city.name %></p>
              <div class="d-flex">
                <i class="fas fa-ellipsis-v" style="font-size: 2em"></i>
                <p class="px-3">Travel time: <%= flight_pair[0].duration %></p>
                <%# raise %>
              </div>
              <p><i class="far fa-circle" style="font-size: 1em"></i> <%= DateTime.strptime(flight_pair[0].full_arrival_date.to_s,'%s').strftime("%H:%M") %> - <%= flight_pair[0].arrival_city.name %></p>
            </div>
          </div>
          <h3 class="price">Roundtrip Price: <%= flight_pair[1].price_cents %><%= flight_pair[1].price_currency %></h3>
        </div>
      <% end %>
    </div>
    <div class="m-3 price-next", style="background-color: white; border: 1px solid grey">
      <p class="total-price">Total price: <%= counter %>Â£</p>
      <%= link_to "Proceed with booking",  bookings_path(plan_id: params[:plan], flight_ids: params[:flight]), method: :post, class:"btn-pay"%>

    </div>
  </div>

</div>
