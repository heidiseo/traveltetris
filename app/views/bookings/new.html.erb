<h1>Price Breakdown</h1>

<% @flights.each do |flight_pair| %>
  <div class="flight", style="background-color: white">
    <h3>Departure flight</h3>
      <p>Departure date<%= flight_pair[0].departure_date %></p>
      <p>Arrival date<%= flight_pair[0].arrival_date %></p>
      <p>full dep <%= flight_pair[0].full_departure_date %></p>
      <p>full arrival<%= flight_pair[0].full_arrival_date %></p>
      <p>flight number<%= flight_pair[0].flight_number %></p>
      <p>price <%= flight_pair[0].price_cents %></p>
      <p>currency <%= flight_pair[0].price_currency %></p>
      <p>departure city id<%= flight_pair[0].departure_city_id %></p>
      <p>arrival city id <%= flight_pair[0].arrival_city_id %></p>

    <h3>Returning flight</h3>
      <p>Departure date<%= flight_pair[1].departure_date %></p>
      <p>Arrival date<%= flight_pair[1].arrival_date %></p>
      <p>full dep <%= flight_pair[1].full_departure_date %></p>
      <p>full arrival<%= flight_pair[1].full_arrival_date %></p>
      <p>flight number<%= flight_pair[1].flight_number %></p>
      <p>price <%= flight_pair[1].price_cents %></p>
      <p>currency <%= flight_pair[1].price_currency %></p>
      <p>departure city id<%= flight_pair[1].departure_city_id %></p>
      <p>arrival city id <%= flight_pair[1].arrival_city_id %></p>

  </div>
<% end %>

<%= link_to "Proceed with booking",  bookings_path(Booking.new), class:"btn-treehouse"%>
