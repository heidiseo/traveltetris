<div class="container">
  <h1>Price Breakdown</h1>
  <div class="d-flex">
    <div>
      <% counter = 0 %>
      <% @flights.each do |flight_pair| %>
        <% counter += flight_pair[0].price_cents %>
        <div class="flight summary-card">
          <div class="">
            <div>
              <h3>Departure flight</h3>
              <p>Departure date<%= flight_pair[0].departure_date %></p>
              <p>Arrival date<%= flight_pair[0].arrival_date %></p>
              <p>full dep <%= flight_pair[0].full_departure_date %></p>
              <p>full arrival<%= flight_pair[0].full_arrival_date %></p>
              <p>flight number<%= flight_pair[0].flight_number %></p>
              <p>departure city id<%= flight_pair[0].departure_city.name %></p>
              <p>arrival city id <%= flight_pair[0].arrival_city.name %></p>
            </div>

            <div>
              <h3>Returning flight</h3>
              <p><%= flight_pair[0].departure_date.strftime("%A, %d %B %Y") %></p>
              <p><%= DateTime.strptime(flight_pair[0].full_departure_date.to_s,'%s').strftime("%H:%M") %> - <%= flight_pair[0].departure_city.name %></p>
              <p><i class="fas fa-ellipsis-v">  Flight </i><%= flight_pair[1].flight_number %></p>

              <p><%= DateTime.strptime(flight_pair[0].full_arrival_date.to_s,'%s').strftime("%H:%M") %> -<%= flight_pair[0].arrival_city.name %></p>
              <p><%= flight_pair[1].arrival_date %>- <%= flight_pair[1].arrival_city.name %></p>
              <p>full dep <%= flight_pair[1].full_departure_date %></p>
              <p>full arrival<%= flight_pair[1].full_arrival_date %></p>
            </div>
          </div>
          <h3 class="price">Roundtrip Price: <%= flight_pair[1].price_cents %><%= flight_pair[1].price_currency %></h3>
        </div>
        <% end %>

    </div>
    <div class="m-3">
      <p>Total price: <%= counter %>Â£</p>
      <%= link_to "Proceed with booking",  bookings_path(Booking.new), class:"btn-treehouse"%>

    </div>
  </div>

</div>
