<div class="container col-12">
  <div class="no-results">
    <% unless @warning.blank? %>
      <p>We are sorry, no flights were found.</p>
    <% end %>
  </div>

  <div class="flight-info">
    <div class="d-flex justify-content-around my-3">
      <% @going_flights.each do |date, flights| %>
        <% dep_time_format = Date.parse(date) %>
        <% arr_time_format = flights.first.arrival_date %>

        <div class="date-card grey d-flex justify-content-between">
          <div class="card-body-date">
            <span class="card-text"><%= dep_time_format.strftime("%d")%> <%= dep_time_format.strftime("%B")%>  -  <%=  arr_time_format.strftime("%d")%> <%= arr_time_format.strftime("%B")%> <%= arr_time_format.strftime("%Y")%> </span>
          </div>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-around my-3">
      <% @going_flights.each do |d, flights| %>
        <div class="flight-card">
          <% flights.each do |flight| %>
            <div class="card-body my-3">
              <p class="card-text m-0 p-0"><%= flight.arrival_city.name  %></p>
              <p class="card-text m-0 p-0">Â£ <%= flight.price_cents %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
  <%= link_to "Book",  new_booking_path, class:"btn-treehouse"%>
