<div class="container">

  <div class="no-results">
    <% if @warning %>
      <p>We are sorry, no flights were found.</p>
    <% end %>
  </div>
  <div class="flight-info">
    <% @flights.each_with_index do |flight, index| %>
      <h3 m-3><%= index.zero? ? 'Departing' : 'Returning' %></h3>
      <p>Departure date: <%= flight.departure_date %></p>
      <p>Arrival date: <%= flight.arrival_date %></p>
      <p>Departure city: <%= flight.departure_city.name %></p>
      <p>Arrival city: <%= flight.arrival_city.name %></p>
      <p>Price: <%= flight.price_cents %></p>
      <p>Flight #: <%= flight.flight_number %></p>
    <% end %>
  </div>
</div>


