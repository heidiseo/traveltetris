<div class="container col-12">
  <div class="no-results">
    <% unless @warning.blank? %>
      <p>We are sorry, no flights were found.</p>
    <% end %>
  </div>

  <div class="flight-info">
    <div class="d-flex justify-content-around my-3">
      <% @going_flights.each do |date, flights| %>
        <% dep_time_format = Date.parse(date) %>
        <% arr_time_format = flights.first.arrival_date %>

        <div class="date-card grey d-flex justify-content-between">
          <div class="card-body-date">
            <span class="card-text"><%= dep_time_format.strftime("%d")%> <%= dep_time_format.strftime("%B")%>  -  <%=  arr_time_format.strftime("%d")%> <%= arr_time_format.strftime("%B")%> <%= arr_time_format.strftime("%Y")%> </span>
          </div>
        </div>
      <% end %>
        <div class="card-card grey d-flex justify-content-between">
          <div class="card-body-date">
            <p class= "card-text"><strong>Total</strong></p>
          </div>
        </div>
    </div>

    <div class="d-flex justify-content-around my-3">
      <% @going_flights.each do |d, flights| %>
        <div class="flight-card">
          <% flights.each do |flight| %>

  <!--       Main Button -->

            <button type= "button" class="btn btn-link" data-toggle="modal" data-target="#exampleModalLong<%= flight.id %>" data-flightid="<%= flight.id %>" >
              <div class="card-body my-3">

                <p class="card-text-city m-0 p-0"><%= flight.arrival_city.name%></p>

                <p class="card-text-city m-0 p-0">£ <%= flight.price_cents %></p>
              </div>
            </button>

    <!--    Modal  PopUp-->


              <div class="modal fade bd-example-modal-lg" id="exampleModalLong<%= flight.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                  <div style="position: relative; width: 100%;">
                    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1495562569060-2eec283d3391?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60)">
                      <button type="button" class="close" style="color:black; font-size: 32px; padding-right:8px;" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                      <div class="card-flight">
                        <div class="card-flight-font">
                          <h2>Departing flight- <%=flight.departure_date %></h2>
                          <div class="card-flight-details">
                            <p>6:30- <%= flight.departure_city.name %></p>
                            <div class="d-flex">
                              <i class="fas fa-ellipsis-v" style="font-size: 2em"></i>
                              <p class="px-3">Travel time: 2 h 10 min</p>
                            </div>
                            <p>8:40- <%= flight.arrival_city.name %></p>
                          </div>
                          <br>
                          <h2>Returning flight- <%= flight.arrival_date %></h2>
                          <div class="card-flight-details">
                            <p>21:40 -<%= flight.arrival_city.name %></p>
                            <div class="d-flex">
                              <i class="fas fa-ellipsis-v" style="font-size: 2em"></i>
                              <p class="px-3">Travel time: 2 h 10 min</p>
                            </div>
                            <p>23:40 -<%= flight.departure_city.name %></p>
                            <div class="card-total-price">
                              <strong><h5>Total- <%= flight.price_cents%>£</h5></strong>

                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary select">Select</button>
                            </div>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
<!--
            end of Modal Body
 -->

          <% end %>
        </div>
      <% end %>

        <div class="flight-card">
          <div class="card-body">
            <p class="card-text">TEST</p>
          </div>
        </div>
    </div>

    </div>
  </div>
  <%= link_to "Book",  new_booking_path(plan: @plan.id), class:"btn-treehouse"%>

  <script>
    var selectButtons = document.querySelectorAll(".btn.select");
    selectButtons.forEach((selectButton) => {
      selectButton.addEventListener("click", (event) => {
        var flightId = event.currentTarget.parentNode.parentNode.parentNode.parentNode.dataset.id;
        var flight = document.querySelector(`button[data-flightid='${flightId}']`);
        flight.classList.add("selected");
        var closeBtn = event.currentTarget.parentNode.parentNode.firstElementChild.lastElementChild;
        closeBtn.click();
      });
    });
  </script>

