<div class="container col-12">
  <div class="no-results">
    <% unless @warning.blank? %>
      <p>We are sorry, no flights were found.</p>
    <% end %>
  </div>

  <div class="flight-info">
    <div class="d-flex justify-content-around my-3">
      <% @going_flights.each do |date, flights| %>
        <% dep_time_format = Date.parse(date) %>
        <% arr_time_format = flights.first.arrival_date %>

        <div class="date-card grey d-flex justify-content-between">
          <div class="card-body-date">
            <span class="card-text"><strong><%= dep_time_format.strftime("%d")%> <%= dep_time_format.strftime("%B")%>  -  <%=  arr_time_format.strftime("%d")%> <%= arr_time_format.strftime("%B")%> <%= arr_time_format.strftime("%Y")%> </strong> </span>
          </div>
        </div>
      <% end %>
        <div class="card-card grey d-flex justify-content-between">
          <div class="card-body-date">
            <p class= "card-text"><strong>Total</strong></p>
          </div>
        </div>
    </div>

    <div class="d-flex justify-content-around my-3">

      <% @combs_with_price.each do |flights| %>
        <%#= raise %>
        <div class="flight-card">
          <% flights[:flights].each do |flight_pair| %>

  <!--       Main Button -->

            <button type= "button" class="btn btn-link" data-toggle="modal" data-target="#exampleModalLong<%= flight_pair[0].id %>" data-flightid="<%= flight_pair[0].id %>" >
              <div class="card-body my-3">

                <p class="card-text-city m-0 p-0"><%= flight_pair[0].arrival_city.name%></p>

                <p class="card-text-city m-0 p-0">£ <%= flight_pair[0].price_cents %></p>
                <p class="card-text-city m-0 p-0">£ <%= flights[:price] %></p>
              </div>
            </button>

    <!--    Modal  PopUp-->


              <div class="modal fade" id="exampleModalLong<%= flight_pair[0].id %>" data-id="<%= flight_pair[0].id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Flight Info</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p>going</p>
                        <%= flight_pair[0].departure_city.name %>
                        <%= flight_pair[0].departure_date %>
                        <%= flight_pair[0].arrival_city.name %>
                         <%= flight_pair[0].arrival_date %>
                        <%= flight_pair[0].price_cents  %>
                        <p>re</p>
                         <%= flight_pair[1].departure_city.name %>
                        <%= flight_pair[1].departure_date %>
                        <%= flight_pair[1].arrival_city.name %>
                         <%= flight_pair[1].arrival_date %>
                        <%= flight_pair[1].price_cents  %>
                    </div>

                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary select">Select flight</button>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      <% end %>
      <div class="flight-card">
        <div class="card-body">
          <p class="card-text">TEST</p>
        </div>
      </div>
    </div>
   </div>
  </div>

</div>

  <%= link_to "Book", new_booking_path(plan: @plan.id), onclick: "addFlights()", id:"book-btn", class:"btn-treehouse" %>

  <script>

    var selectButtons = document.querySelectorAll(".btn.select");
    selectButtons.forEach((selectButton) => {
      selectButton.addEventListener("click", (event) => {
        console.log(event.currentTarget);
        var flightId = event.currentTarget.parentNode.parentNode.parentNode.parentNode.parentNode.dataset.id;
        var flight = document.querySelector(`button[data-flightid='${flightId}']`);
        if (flight.classList.contains('selected')) {
          flight.classList.remove("selected");
          event.currentTarget.innerHTML = "Select flight";
        } else {
          flight.classList.add("selected");
          event.currentTarget.innerHTML = "Unselect flight";
        }
        var closeBtn = event.currentTarget.parentNode.parentNode.firstElementChild.lastElementChild;
        closeBtn.click();
      });
    });


    const addFlights = () => {
      const selectedFlights = document.querySelectorAll(".selected");
      let extraHref = "&flight=";
      const lastFlight = selectedFlights[selectedFlights.length-1]
      selectedFlights.forEach((flight) => {
        if(flight == lastFlight) {
          extraHref += `${flight.dataset.flightid}`;
        } else {
          extraHref += `${flight.dataset.flightid},`;
        }
      });

      const bookBtn = document.getElementById("book-btn");
      const newHref = bookBtn.href + extraHref;
      bookBtn.href = newHref;
    }
  </script>
